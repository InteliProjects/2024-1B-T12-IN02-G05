  <script>
    async function loadUserProfile() {
      try {
        const userId = window.location.pathname.split('/').pop(); // Obtém o ID da URL
        const response = await fetch(`/user/${userId}`); // Faz a requisição GET para o backend
        const userData = await response.json(); // Converte a resposta para JSON

        document.getElementById('profile-name').textContent = userData.user.name;
        document.getElementById('profile-alias').textContent = userData.student.alias;
        document.getElementById('language-list').textContent = userData.student.languages;
        document.getElementById('interest-list').textContent = userData.student.interests;
        document.getElementById('social-media-1').textContent = userData.student.instagram;
        document.getElementById('social-media-2').textContent = userData.student.linkedin;
        document.getElementById('social-media-3').textContent = userData.student.facebook;
        document.getElementById('social-media-4').textContent = userData.student.x;
        document.getElementById('hobbies').textContent = userData.student.hobbies;
        document.getElementById('bio').textContent = userData.student.bio;
        const profileImage = document.getElementById('profile-img');
        if (userData.student.profile_photo) {
          profileImage.src = userData.student.profile_photo;
        } else {
          profileImage.src = '../images/icone_perfil.svg'; // Caminho da imagem padrão
        }

      } catch (error) {
        console.error('Erro ao carregar perfil:', error);
      }
    }

    window.onload = loadUserProfile;
  </script>
