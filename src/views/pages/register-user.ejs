           <!-- Container for displaying error messages -->
           <div id="errorMessages"></div>
       
           <!-- JavaScript for handling form submission and password validation -->
           <script>
             // Password validation
             var passwordInput = document.getElementById('password');
             var confirmPasswordInput = document.getElementById('passwordConfirm');
             var messageBox = document.getElementById('password-message');
             var letter = document.getElementById('letter');
             var capital = document.getElementById('capital');
             var number = document.getElementById('number');
             var length = document.getElementById('length');
       
             passwordInput.onfocus = function() {
                 messageBox.style.display = 'block';
             }
       
             passwordInput.onblur = function() {
                 messageBox.style.display = 'none';
             }
       
             passwordInput.onkeyup = function() {
                 // Validate lowercase letters
                 var lowerCaseLetters = /[a-z]/g;
                 if(passwordInput.value.match(lowerCaseLetters)) {
                     letter.classList.remove('invalid');
                     letter.classList.add('valid');
                 } else {
                     letter.classList.remove('valid');
                     letter.classList.add('invalid');
                 }
                 
                 // Validate capital letters
                 var upperCaseLetters = /[A-Z]/g;
                 if(passwordInput.value.match(upperCaseLetters)) {
                     capital.classList.remove('invalid');
                     capital.classList.add('valid');
                 } else {
                     capital.classList.remove('valid');
                     capital.classList.add('invalid');
                 }
       
                 // Validate numbers
                 var numbers = /[0-9]/g;
                 if(passwordInput.value.match(numbers)) {
                     number.classList.remove('invalid');
                     number.classList.add('valid');
                 } else {
                     number.classList.remove('valid');
                     number.classList.add('invalid');
                 }
                 
                 // Validate length
                 if(passwordInput.value.length >= 8) {
                     length.classList.remove('invalid');
                     length.classList.add('valid');
                 } else {
                     length.classList.remove('valid');
                     length.classList.add('invalid');
                 }
             }
       
             document.getElementById('registerForm').addEventListener('submit', async function (event) {
               event.preventDefault(); // Prevent the default form submission behavior
               
               // Check if passwords match
               if (passwordInput.value !== confirmPasswordInput.value) {
                 const errorMessages = document.getElementById('errorMessages');
                 errorMessages.innerHTML = ''; // Clear previous error messages
                 const errorMessage = document.createElement('p');
                 errorMessage.textContent = 'Passwords do not match!';
                 errorMessages.appendChild(errorMessage);
                 return;
               }
       
               // Create a FormData object from the form
               const formData = new FormData(this);
               
               // Send a POST request to the server with the form data
               const response = await fetch('/register-user', {
                 method: 'POST',
                 body: formData
               });
           
               // Parse the JSON response from the server
               const responseData = await response.json();
       
               if (response.ok) {
                 // If the response is successful, redirect to the login page
                 window.location.href = '/login';
               } else {
                 // If there are errors, display them in the errorMessages div
                 const errorMessages = document.getElementById('errorMessages');
                 errorMessages.innerHTML = ''; // Clear previous error messages
                 const errorMessage = document.createElement('p');
                 errorMessage.textContent = responseData.message;
                 errorMessages.appendChild(errorMessage);
               }
             });
           </script>
