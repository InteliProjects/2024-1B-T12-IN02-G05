    <!-- Create a form for user registration with an ID of "registerForm" and class "box" -->
    <form id="registerForm" class="box">
               <!-- Display a header prompting the user if it's their first access -->
               <h3>Is this your first access?</h3>
               <!-- Display the main heading for the registration form -->
               <h1>Register User</h1>
               
               <!-- Form group for the user's name input -->
               <div class="form-group">
                   <label for="name">Name:</label>
                   <!-- Input field for the user to enter their full name, required field -->
                   <input type="text" id="name" name="name" placeholder="Enter your full name..." required>
               </div>
       
               <!-- Form group for the user's username input -->
               <div class="form-group">
                   <label for="username">Username:</label>
                   <!-- Input field for the user to enter a username, required field -->
                   <input type="text" id="username" name="username" placeholder="Enter a username..." required>
               </div>
       
               <!-- Form group for the user's email input -->
               <div class="form-group">
                   <label for="email">Email:</label>
                   <!-- Input field for the user to enter their email, required field -->
                   <input type="email" id="email" name="email" placeholder="Enter your email..." required>
               </div>
       
               <!-- Form group for the user's password input -->
               <div class="form-group">
                   <label for="password">Password:</label>
                   <!-- Input field for the user to enter their password, required field -->
                   <input type="password" id="password" name="password" placeholder="Enter your password..." required>
               </div>
       
               <!-- Password validation message -->
               <div id="password-message">
                   <h4>Password must contain the following:</h4>
                   <p id="letter" class="invalid">A <b>lowercase</b> letter</p>
                   <p id="capital" class="invalid">A <b>capital (uppercase)</b> letter</p>
                   <p id="number" class="invalid">A <b>number</b></p>
