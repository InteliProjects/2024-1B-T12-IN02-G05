        font-size: 30px;
        color: var(--black);
        text-align: center;
        align-content: center;
        width: 180px;
        height: 55px;
        margin-bottom: 0;
        margin-top: 12px;
    }

    /* Style for the images inside the result boxes */
    .result-box img {
        width: 90px;
        height: 90px;
        display: block;
        margin: 0;
    }

    /* Style for the temporal results section */
    .time-results {
        margin-top: 50px;
        text-align: center;
    }

    /* Style for the circles */
    .circle {
