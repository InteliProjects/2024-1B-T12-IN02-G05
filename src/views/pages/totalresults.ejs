        font-size: 32px;
        font-weight: bold;
        color: var(--dark-blue);
        margin: 30px 0px;
    }

    /* Style for the decision-making section */
    .decision-making {
        display: flex;
        flex-direction: row;
        justify-content: left;
        gap: 20px;
        align-items: center;
    }

    /* Style for the result boxes */
    .result-box {
        background-color: var(--yellow);
